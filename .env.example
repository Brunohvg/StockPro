# ===========================================
# StockPro V11 - Configurações de Ambiente
# ===========================================
# Copie este arquivo para .env e preencha os valores reais antes do deploy.

# ===========================================
# Django Core Settings
# ===========================================
SECRET_KEY=sua-chave-secreta-fortemente-gerada-aqui
DEBUG=False
ALLOWED_HOSTS=stockpro.seudominio.com.br,localhost
CSRF_TRUSTED_ORIGINS=https://stockpro.seudominio.com.br

# Rota administrativa protegida (troque 'admin' por algo único)
ADMIN_URL=admin-secreto/

# ===========================================
# Database (PostgreSQL - Produção)
# ===========================================
DB_HOST=localhost
DB_NAME=stockpro_db
DB_USER=stockpro_user
DB_PASSWORD=sua-senha-segura-aqui
DB_PORT=5432

# ===========================================
# Celery / Redis
# ===========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===========================================
# Superuser Inicial (Provisionado no Migrate/Bootstrap)
# ===========================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@seuemail.com
DJANGO_SUPERUSER_PASSWORD=senha-super-segura-123

# ===========================================
# Inteligência Artificial (Prioridade Automática)
# ===========================================
# O sistema utiliza failover: Groq -> Gemini -> OpenAI -> Grok
GROQ_API_KEY=sua_chave_aqui
GEMINI_API_KEY=sua_chave_aqui
OPENAI_API_KEY=sua_chave_aqui
XAI_API_KEY=sua_chave_aqui
XAI_MODEL=grok-2-latest
AI_MAX_TOKENS=500
