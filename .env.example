# ===========================================
# StockPro V11 - Configurações de Ambiente
# ===========================================
# Copie este arquivo para .env e preencha os valores

# ===========================================
# Django Settings
# ===========================================
SECRET_KEY=gere-uma-chave-secreta-com-64-caracteres-aqui
DEBUG=False
ALLOWED_HOSTS=stockpro.seudominio.com.br,localhost
CSRF_TRUSTED_ORIGINS=https://stockpro.seudominio.com.br

# Domínio para Traefik/SSL
DOMAIN=stockpro.seudominio.com.br

# ===========================================
# Database (PostgreSQL - Externo à Stack)
# ===========================================
DB_HOST=seu-host-postgres
DB_NAME=stockpro_db
DB_USER=stockpro_user
DB_PASSWORD=senha-segura-do-banco
DB_PORT=5432

# ===========================================
# Celery / Redis (Interno na Stack)
# ===========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===========================================
# Superuser Inicial (criado no primeiro deploy)
# ===========================================
DJANGO_SUPERUSER_EMAIL=admin@seudominio.com.br
DJANGO_SUPERUSER_PASSWORD=senha-admin-segura-123

# ===========================================
# Timezone
# ===========================================
# ===========================================
# Inteligência Artificial (Multi-Provedor)
# ===========================================
# O sistema prioriza: GROQ (Ultra-rápido/Grátis) -> GEMINI (Grátis) -> OPENAI -> GROK (X.AI)
GROQ_API_KEY=sua_chave_groq_aqui
GEMINI_API_KEY=sua_chave_gratis_google_aqui
OPENAI_API_KEY=sua_chave_openai_aqui
XAI_API_KEY=sua_chave_xai_grok_aqui
XAI_MODEL=grok-2-latest
AI_MAX_TOKENS=500
